generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?
}

model Report {
  id          String   @id @default(uuid())
  url         String
  name        String
  title       String
  description String
  tags        String[]
  imageUrl    String
  namespace   String
  trends      Trend[]
}

model Trend {
  id          String  @id @default(uuid())
  name        String
  title       String
  description String
  isSent      Boolean
  report      Report  @relation(fields: [reportId], references: [id])
  reportId    String
}
